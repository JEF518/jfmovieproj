<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>{{{loud data.Title}}}</title>
    <meta name="description" content="Movie Site">
    <meta name="author" content="SitePoint">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <style>

    </style>
</head>

<body>
    <container>
        <div class="menu-button">
            <a href="/"><img src='/home.png' style="width: 80%" /></a>
        </div><br>
        <div class="menu-button">
            <a href="/genres"><img src='/menu.png' style="padding-top: 50px; width: 80%" /></a>
        </div>
        <h1>{{{loud data.Title}}}</h1>
        <div class="movie-div" />
        <div class="movie-title">
            {{!-- <h2>{{data.Title}}</h2> --}}
        </div> <br>
        <img src={{data.Poster}} /><br><br>

        <table style="width:100%">
            <tr>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <td>Plot</td>
                <td>{{data.Plot}}<br><br>
                    <a href="/film/title/{{data.Title}}/year/{{data.Year}}/full">
                        <button label="fullplot">Full Plot</button></td>
                </a>
            </tr>
            <tr>
                <td>Year</td>
                <td>{{data.Year}}</td>
            </tr>
            <tr>
                <td>Runtime</td>
                <td>{{data.Runtime}}</td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>{{data.Genre}}</td>
            </tr>
            <tr>
                <td>Director</td>
                <td>{{data.Director}}</td>
            </tr>
            <tr>
                <td>Written by</td>
                <td>{{data.Writer}}</td>
            </tr>
            <tr>
                <td>Starring</td>
                <td>{{data.Actors}}</td>
            </tr>
            <tr>
                <td>IMDB Rating</td>
                <td>{{data.imdbRating}}</td>
            </tr>
            <tr>
                <td>Awards</td>
                <td>{{data.Awards}}</td>
            </tr>
        </table><br>
        <h2>Trailer</h2>
        <div id="iframe-div"></div>
        <iframe width='560' height='315' src="https://www.youtube.com/embed/{{data.trailer}}" frameborder='0'
            allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture' allowfullscreen></iframe>
        </div>
    </container>
    <script src="js/scripts.js">
        function loadDoc() {
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function (title, year) {
                if (this.readyState == 4 && this.status == 200) {
                    document.getElementById("demo").innerHTML = this.responseText;
                }
            };
            const url = "filmtrailer/title/year"
            xhttp.open("GET", url, true);
            xhttp.send();
            var trailerUrl = 'https://www.youtube.com/embed/' + xhttp.responseText;
            document.getElementById("iframe-div").firstChild.src = trailerUrl;
        }
    </script>
</body>

</html>